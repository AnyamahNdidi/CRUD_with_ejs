<!DOCTYPE html>
<html>
<%- include('./partials/head.ejs') %>

  <body>
    <%- include('./partials/nav.ejs') %>

      <div class="container">
        <h4>Item Details</h4>
        <div>
          <h5>
            Name: <%= items.name %>
          </h5>
          <h5>
            Price: <%= items.price %>
          </h5>
          <a id="deleteBtn" class="delete btn" data-id="<%= items._id %>" href="">Delete</a>
        </div>


      </div>
      <script>
        deleteBtn.onclick = function (e) {
          e.preventDefault();
          const id = deleteBtn.dataset.id
          console.log(id)
          const endpoint = `/item/${id}`
          fetch(endpoint, {
            method: "DELETE"
          }).then(res => res.json()).
            then(data => {
              console.log(data)
              window.location.href = data.redirect
            }

            ).catch(err => console.log(err))
        }
      </script>

  </body>

</html>